    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Run Mocha",
            "program": "${workspaceRoot}/node_modules/mocha/bin/_mocha",
            "args": ["dist/**/*.test.js"],
            "cwd": "${workspaceRoot}/packages/medley-mve",
            "outFiles": [],
            "smartStep": true,
            "console": "integratedTerminal",
