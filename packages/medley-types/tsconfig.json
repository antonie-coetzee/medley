{
  "compilerOptions": {
    "target": "esnext",
    "lib": ["dom", "esnext"],
    "skipLibCheck": true,
    "esModuleInterop": true,
    "declaration": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "jsx": "react",
    "noEmitOnError": true,
    "module": "esnext",
    "moduleResolution": "node",
    "isolatedModules": true,
    "baseUrl": "src",
    "outDir": "./dist"
  },
  "include": ["./src/**/*.ts", "./src/**/*.tsx"]
}
