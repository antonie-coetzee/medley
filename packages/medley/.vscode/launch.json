{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Debug Jest Tests",
      "cwd": "${workspaceFolder}",
      "program": "${workspaceFolder}/../../node_modules/jest/bin/jest.js",
      "console": "integratedTerminal",
      "args": [
        "--runInBand",
        "--config",
        "${workspaceFolder}/jest.config.cjs"
      ]
    }
  ]
}
