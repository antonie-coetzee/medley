{
  "compilerOptions": {
    "target": "esnext",
    "lib": [
      "dom",
      "esnext"
    ],
    "skipLibCheck": true,
    "esModuleInterop": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmitOnError": true,
    "module": "esnext",
    "moduleResolution": "node",
    "isolatedModules": true,
    "outDir": "./dist"
  },
  "include": ["./src"]
}
