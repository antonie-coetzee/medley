{
  "compilerOptions": {
    "target": "ESNext",                          
    "module": "esnext",
    "moduleResolution": "node",
    "skipLibCheck": true,   
    "allowSyntheticDefaultImports": true,                  
    "noEmitOnError": true,
    "lib": ["ESNext", "DOM"],                            
    "strict": true,  
    "esModuleInterop": true,                 
    "outDir": "./dist",
    "rootDir": "./",
    "jsx": "react",
    "paths": {
      "@medley":["../"]}
  }
  ,
  "include": ["./src/**/*.ts", "./src/**/*.tsx", "../medley/dist/medley.d.ts"]
}
