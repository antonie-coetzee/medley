{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    //"sourceMap": true,
    //"inlineSources": true,
    "target": "ESNext",                          
    "module": "esnext",
    "moduleResolution": "node",
    "skipLibCheck": true,   
    "allowSyntheticDefaultImports": true,                  
    "noEmitOnError": true,
    "lib": ["ESNext", "DOM"],                            
    "strict": true,  
    "esModuleInterop": true,                 
    "outDir": "./dist",
    "rootDir": "./src",
    "jsx": "react",
     "paths": {
       "@medley":["../medley"]}
  },
  "references": [{ "path": "../medley" }],
  "include": ["./src/**/*.ts", "./src/**/*.tsx"]
}
