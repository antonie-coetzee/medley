{
  "exclude": ["node_modules", "dist"],
  "extends": "../../tsconfig.json",  
  "compilerOptions": {
    "outDir": "dist",
    "lib": ["ES2020", "DOM"],
    "module": "ES2020",
    "target": "ES2020",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "importHelpers": true,
    "sourceMap": true,
    "noImplicitAny": true,
    "declaration": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "pretty": true,
    "strictNullChecks": true
  },
  "include": ["src"],
}
