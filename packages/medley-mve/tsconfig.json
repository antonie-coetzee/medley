{
  "exclude": ["node_modules", "dist"],
  "extends": "../../tsconfig.json",  
  "compilerOptions": {
    "outDir": "dist",
    "lib": ["esnext", "DOM"],
    "module": "esnext",
    "target": "ES6",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "importHelpers": true,
    "inlineSourceMap": true,
    "noImplicitAny": true,
    "declaration": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "stripInternal": true,
    "pretty": true,
    "strictNullChecks": true
  },
  "include": ["src"],
}
